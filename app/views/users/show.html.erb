<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 150 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <ul>
          <% @user.microposts.each do |micropost| %>
            <li> * <%= micropost.content %></li>
          <% end %>
        </ul>
      </ol>
    <% end %>
  </div>
</div>
